@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers
@model QLBH.Models.Loaimonan

@{
    ViewData["Title"] = "ThemLoaiSanPhamMoi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ThemLoaiSanPhamMoi</h1>

<h4>Loaimonan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemLoaiSanPhamMoi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaLoai" class="control-label"></label>
                <input asp-for="MaLoai" class="form-control" />
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenLoai" class="control-label"></label>
                <input asp-for="TenLoai" class="form-control" />
                <span asp-validation-for="TenLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="LoaiSanPham">Back to List</a>
</div>

@section Styles {
    <style>
        /* Định dạng tổng thể cho form */
        .form-group {
            margin-bottom: 1.5rem; /* Tăng khoảng cách giữa các trường */
        }

        /* Định dạng tiêu đề */
        h1 {
            color: #333; /* Màu chữ tối */
            font-size: 2rem; /* Kích thước chữ lớn */
        }

        /* Định dạng các nhãn */
        .control-label {
            font-weight: bold; /* Chữ đậm */
            color: #555; /* Màu chữ xám */
        }

        /* Định dạng các input */
        .form-control {
            border: 1px solid #ced4da; /* Viền màu xám nhạt */
            border-radius: 0.5rem; /* Bo góc cho các ô nhập liệu */
            padding: 0.75rem 1.25rem; /* Khoảng cách bên trong ô nhập liệu */
        }

        /* Định dạng button */
        .btn-primary {
            background-color: #007bff; /* Màu nền chính */
            border-color: #007bff; /* Màu viền chính */
            padding: 0.5rem 1rem; /* Khoảng cách cho nút */
            font-size: 1rem; /* Kích thước chữ trong nút */
            border-radius: 0.5rem; /* Bo góc cho nút */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Màu nền khi hover */
            border-color: #0056b3; /* Màu viền khi hover */
        }

        /* Định dạng thông báo lỗi */
        .text-danger {
            font-size: 0.875rem; /* Kích thước chữ nhỏ hơn cho thông báo lỗi */
        }

        /* Định dạng liên kết quay lại */
        a {
            color: #007bff; /* Màu liên kết */
        }

        a:hover {
            text-decoration: underline; /* Gạch chân khi hover */
        }
    </style>
}


@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers

@model QLBH.Models.Monan

@{
    ViewData["Title"] = "SuaSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="centreH">Sửa sản phẩm</h1>

<h4 class="centreH">Món ăn</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post" asp-action="SuaSanPham">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaMonAn" />
            <span asp-validation-for="MaMonAn" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="MaLoai" class="control-label">Mã loại món ăn</label>
                <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai"></select>
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenHh" class="control-label">Tên món ăn</label>
                <input asp-for="TenHh" class="form-control" />
                <span asp-validation-for="TenHh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGiaBan" class="control-label">Đơn giá bán</label>
                <input asp-for="DonGiaBan" class="form-control" />
                <span asp-validation-for="DonGiaBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anh" class="control-label">Ảnh</label>
                <input asp-for="Anh" class="form-control" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-secondary " asp-action="DanhMucSanPham">Trở lại</a>
</div>

@section Styles {
    <style>
        /* Định dạng tổng thể cho form */
        .form-group {
            margin-bottom: 1.5rem; 
        }

        .centreH{
            text-align:center
        }

        h1 {
            color: #333; 
            font-size: 2rem; 
        }

        .control-label {
            font-weight: bold; 
            color: #555; 
        }

        .form-control {
            border: 1px solid #ced4da; 
            border-radius: 0.5rem; 
            padding: 0.75rem 1.25rem; 
        }

        .btn-primary {
            background-color: #007bff; 
            border-color: #007bff;
            padding: 0.5rem 1rem; 
            font-size: 1rem; 
            border-radius: 0.5rem; 
        }

            .btn-primary:hover {
                background-color: #0056b3; 
                border-color: #0056b3; 
            }

        .text-danger {
            font-size: 0.875rem; 
        }

        a {
            color: #007bff; 
        }

            a:hover {
                text-decoration: underline; 
            }
    </style>
}
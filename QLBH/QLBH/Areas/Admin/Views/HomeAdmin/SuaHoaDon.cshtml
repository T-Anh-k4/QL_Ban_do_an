@model QLBH.Models.Hoadonban
@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "SuaHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="centreH">SuaHoaDon</h1>

<h4 class="centreH">Hoadonban</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post" asp-action="SuaHoaDon">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SoHdb" />
            <div class="form-group">
                <label asp-for="NgayDatHang" class="control-label">Ngày đặt hàng</label>
                <input asp-for="NgayDatHang" class="form-control" />
                <span asp-validation-for="NgayDatHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongTien" class="control-label">Tổng tiền</label>
                <input asp-for="TongTien" class="form-control" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThaiTt" class="control-label">Trạng thái thanh toán</label>
                <input asp-for="TrangThaiTt" class="form-control" />
                <span asp-validation-for="TrangThaiTt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-secondary " asp-action="HoaDon">Trở lại</a>
</div>

@section Styles {
    <style>
        /* Định dạng tổng thể cho form */
        .form-group {
            margin-bottom: 1.5rem; 
        }

        .centreH{
            text-align:center
        }

        h1 {
            color: #333; 
            font-size: 2rem; 
        }

        .control-label {
            font-weight: bold; 
            color: #555; 
        }

        .form-control {
            border: 1px solid #ced4da; 
            border-radius: 0.5rem; 
            padding: 0.75rem 1.25rem; 
        }

        .btn-primary {
            background-color: #007bff; 
            border-color: #007bff;
            padding: 0.5rem 1rem; 
            font-size: 1rem; 
            border-radius: 0.5rem; 
        }

            .btn-primary:hover {
                background-color: #0056b3; 
                border-color: #0056b3; 
            }

        .text-danger {
            font-size: 0.875rem; 
        }

        a {
            color: #007bff; 
        }

            a:hover {
                text-decoration: underline; 
            }
    </style>
}